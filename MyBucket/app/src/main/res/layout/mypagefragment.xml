<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/babypink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/MyPageImage"
            android:src="@drawable/charlie"
            />

        <ImageButton
            android:id="@+id/MyPageImageChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/camera"
            android:layout_marginTop="120dp"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신혜란"
                android:textStyle="bold"
                android:textSize="16pt"
                android:id="@+id/MypageName"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="달성현황: "
                    android:textSize="12pt"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MypageAchieve"
                    android:textSize="12pt"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다짐: "
                    android:textSize="12pt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MypageMotto"
                    android:textSize="12pt"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MypageModiftBtn"
            android:src="@drawable/pencil"
            android:background="@null" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 순간들"
        android:background="@color/red"
        android:textSize="12pt"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/FirstRandomImage"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:id="@+id/SecondRandomImage"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:id="@+id/ThirdRandomImage"
                android:background="@color/white"/>
        </TableRow>
        <TableRow
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <ImageView
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:id="@+id/FourthRandomImage"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:id="@+id/FifthRandomImage"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:id="@+id/SixthRandomImage"
                android:background="@color/white"/>
        </TableRow>
    </TableLayout>
    </LinearLayout>
</LinearLayout>