<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="16dp"
    android:id="@+id/whole_item_bucketlist"
    android:background="#ffeeec">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_num_item_bucketlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_bold"
                android:text="1"
                android:textColor="#000000"
                android:textSize="40sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_bold"
                android:text="."
                android:textColor="#000000"
                android:layout_marginRight="8dp"
                android:textSize="40sp"/>
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/background_category_item_bucketlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="#fedfaa"/>
                <ImageView
                    android:id="@+id/iv_category_item_bucketlist"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/etc"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_title_item_bucketlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_bold"
                android:text="버킷 리스트 어플 제작"
                android:textColor="#000000"
                android:textSize="30sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_stamp_item_bucketlist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="#ffffff"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_moreinfo_item_bucketlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중요도: "
                    android:fontFamily="@font/nanumsquare_regular"
                    android:textColor="#000000"
                    android:textSize="40sp"/>
                <TextView
                    android:id="@+id/tv_star1_item_bucketlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★"
                    android:textColor="#D5D5D5"
                    android:textSize="40sp"/>
                <TextView
                    android:id="@+id/tv_star2_item_bucketlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★"
                    android:textColor="#D5D5D5"
                    android:textSize="40sp"/>
                <TextView
                    android:id="@+id/tv_star3_item_bucketlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★"
                    android:textColor="#D5D5D5"
                    android:textSize="40sp"/>
                <TextView
                    android:id="@+id/tv_star4_item_bucketlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★"
                    android:textColor="#D5D5D5"
                    android:textSize="40sp"/>
                <TextView
                    android:id="@+id/tv_star5_item_bucketlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★"
                    android:textColor="#D5D5D5"
                    android:textSize="40sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_regular"
                    android:text="기한: "
                    android:textColor="#000000"
                    android:textSize="40sp"/>
                <TextView
                    android:id="@+id/tv_year_item_bucketlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_light"
                    android:text="2018"
                    android:textColor="#000000"
                    android:textSize="40sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:fontFamily="@font/nanumsquare_light"
                    android:textColor="#000000"
                    android:textSize="40sp"/>
                <TextView
                    android:id="@+id/tv_month_item_bucketlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:fontFamily="@font/nanumsquare_light"
                    android:textColor="#000000"
                    android:textSize="40sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:fontFamily="@font/nanumsquare_light"
                    android:textColor="#000000"
                    android:textSize="40sp"/>
                <TextView
                    android:id="@+id/tv_day_item_bucketlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:fontFamily="@font/nanumsquare_light"
                    android:textColor="#000000"
                    android:textSize="40sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_regular"
                    android:text="해시태그: "
                    android:textColor="#000000"
                    android:textSize="40sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_light"
                    android:text="#"
                    android:textColor="#000000"
                    android:textSize="40sp"/>
                <TextView
                    android:id="@+id/tv_hashtag1_item_bucketlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_light"
                    android:text="개발"
                    android:textColor="#000000"
                    android:textSize="40sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_light"
                    android:text=" #"
                    android:textColor="#000000"
                    android:textSize="40sp"/>
                <TextView
                    android:id="@+id/tv_hashtag2_item_bucketlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_light"
                    android:text="모프"
                    android:textColor="#000000"
                    android:textSize="40sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_light"
                    android:text=" #"
                    android:textColor="#000000"
                    android:textSize="40sp"/>
                <TextView
                    android:id="@+id/tv_hashtag3_item_bucketlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_light"
                    android:text="어플"
                    android:textColor="#000000"
                    android:textSize="40sp"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/btn_detail_bucketlist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#000000"/>
    </RelativeLayout>
</LinearLayout>