<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/babypink">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#98d2d9"
        android:text="마이페이지"
        android:fontFamily="@font/nanumsquare_extrabold"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#ffffff"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="35dp"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/MyPageImage"
                android:src="@drawable/charlie"
                />

            <ImageButton
                android:id="@+id/MyPageImageChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/camera"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ViewSwitcher
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MyPageNameSwitcher">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="신혜란"
                        android:textStyle="bold"
                        android:textSize="40sp"
                        android:id="@+id/MypageName" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/MyPageNameEdit"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:maxLines="1"/>

                </ViewSwitcher>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="달성현황: "
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MypageAchieve"
                    android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다짐: "
                    android:textSize="30sp"/>

                <ViewSwitcher
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MyPageMottoSwitcher">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/MypageMotto"
                        android:textSize="30sp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/MyPageMottoEdit"
                        android:textSize="30sp"
                        android:maxLines="2"/>

                </ViewSwitcher>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ViewSwitcher
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MyPageImageButtonSwticher">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MypageModifyBtn"
                    android:src="@drawable/pencil"
                    android:background="@null" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MyPageSaveBtn"
                    android:src="@drawable/saveimage"
                    android:background="@null"/>
            </ViewSwitcher>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 순간들"
        android:background="@color/red"
        android:textSize="30sp"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/FirstRandomImage"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:background="@color/white"/>
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:id="@+id/SecondRandomImage"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/white"/>
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:id="@+id/ThirdRandomImage"
                    android:background="@color/white"/>
            </TableRow>
            <TableRow
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:id="@+id/FourthRandomImage"
                    android:background="@color/white"/>
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:id="@+id/FifthRandomImage"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/white"/>
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:id="@+id/SixthRandomImage"
                    android:background="@color/white"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>